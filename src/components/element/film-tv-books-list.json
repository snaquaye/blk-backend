{
  "collectionName": "components_element_film_tv_books_lists",
  "info": {
    "displayName": "Recommendation"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "listType": {
      "type": "enumeration",
      "enum": [
        "Book",
        "Film + TV"
      ]
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "blurb": {
      "type": "text",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "listType"
            },
            "Book"
          ]
        }
      },
      "required": false
    },
    "myThoughts": {
      "type": "text",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "listType"
            },
            "Book"
          ]
        }
      },
      "required": false
    },
    "content": {
      "type": "text",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "listType"
            },
            "Film + TV"
          ]
        }
      },
      "required": false
    },
    "trailerLink": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "listType"
            },
            "Film + TV"
          ]
        }
      },
      "required": false
    },
    "availableOn": {
      "type": "component",
      "component": "element.available-on",
      "repeatable": true
    },
    "rating": {
      "type": "string",
      "required": false
    },
    "genres": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::genre.genre"
    }
  },
  "config": {}
}
