{
  "collectionName": "components_element_list_items",
  "info": {
    "displayName": "ListItem"
  },
  "options": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "ListType": {
      "type": "enumeration",
      "enum": [
        "Book",
        "Film + TV"
      ]
    },
    "Image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "AmazonLink": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "ListType"
            },
            "Book"
          ]
        }
      }
    },
